<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wozbe_blog.repository.comment.class">Wozbe\BlogBundle\Entity\CommentRepository</parameter>
        <parameter key="wozbe_blog.repository.post.class">Wozbe\BlogBundle\Entity\PostRepository</parameter>
        <parameter key="wozbe_blog.repository.post_github.class">Wozbe\BlogBundle\Entity\PostGithubRepository</parameter>
    </parameters>

    <services>
        <service id="wozbe_blog.repository.comment" class="%wozbe_blog.repository.comment.class%"
            factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
          <argument>WozbeBlogBundle:Comment</argument>
        </service>
        <service id="wozbe_blog.repository.post" class="%wozbe_blog.repository.post.class%"
            factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
          <argument>WozbeBlogBundle:Post</argument>
        </service>
        <service id="wozbe_blog.repository.post_github" class="%wozbe_blog.repository.post_github.class%"
            factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
          <argument>WozbeBlogBundle:PostGithub</argument>
        </service>
    </services>
</container>
