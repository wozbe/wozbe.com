<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wozbe_blog.manager.comment.class">Wozbe\BlogBundle\Entity\CommentManager</parameter>
        <parameter key="wozbe_blog.manager.post.class">Wozbe\BlogBundle\Entity\PostManager</parameter>
    </parameters>

    <services>
        <service id="wozbe_blog.manager.comment" class="%wozbe_blog.manager.comment.class%">
          <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="wozbe_blog.manager.post" class="%wozbe_blog.manager.post.class%">
          <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
