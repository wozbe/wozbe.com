<div class="zone-add-comment">
  <form action="{{ url('wozbe_ajax_contact') }}" method="post">
    <div class="control-group">
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-user"></i></span>
          <input type="text" id="commentUsername" name="username" class="input-xlarge" placeholder="Username">
        </div>
      </div>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <input type="text" id="commentEmail" name="email" class="input-xlarge" placeholder="Email">
        </div>
      </div>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-html5"></i></span>
          <input type="text" id="commentWebsite" name="website" class="input-xlarge" placeholder="Website">
        </div>
      </div>
      <div class="controls">
        <textarea rows="10" id="contactMessage" name="message" class="input-block-level" ></textarea>
      </div>
    </div>
      
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">Envoyer</button>
      </div>
    </div>
  </form>
