{% form_theme form '::form_theme.html.twig' %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

{{ form_errors(form) }}

{{ form_row(form.title) }}
{{ form_row(form.slug) }}
{{ form_row(form.published) }}
{{ form_row(form.description, {'attr': {'rows': 7, 'class': 'input-block-level'}}) }}
{{ form_row(form.content, {'attr': {'rows': 15, 'class': 'input-block-level'}}) }}

<div class="form-actions">
  {{ form_row(form.save) }}
</div>

{{ form_end(form) }}
