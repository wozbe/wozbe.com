{% extends 'WozbeAdminBundle::layout.html.twig' %}

{% form_theme form '::form_theme.html.twig' %}

{% block title %}{{ 'Post edition'|trans }}{% endblock %}

{% block content %}
  <div class="">
    <h1>
      Post edition
      <a href="{{ url('wozbe_admin_post_edit', {'slug': post.slug}) }}">
        <button class="btn pull-right" type="button"><i class="icon-download"></i> {{ 'Update from Github'|trans }}</button>
      </a>
    </h1>
  </div>
  {{ include('WozbeAdminBundle:Post:form.html.twig', {'form': form}) }}
{% endblock %}
