{% extends 'WozbeAdminBundle::layout.html.twig' %}

{% block title %}{{ 'Comments'|trans }}{% endblock %}

{% block content %}
<div class="">
  <h1>
    Comment management
  </h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>{{ 'Author'|trans }}</th>
      <th>{{ 'Post'|trans }}</th>
      <th>{{ 'Created At'|trans }}</th>
      <th>{{ 'Published'|trans }}</th>
      <th>{{ 'Actions'|trans }}</th>
    </tr>
  </thead>
  <tbody>
    {% for comment in comments %}
    <tr>
      <td>{{ comment.username }}</td>
      <td>{{ comment.post.slug }}</td>
      <td>{{ comment.createdAt|date('d/m/Y') }}</td>
      <td>{% if comment.published %}<span class="label label-success">Published</span>{% else %}<span class="label label-primary">Not Published</span>{% endif %}</td>
      <td>
        <a href="{{ url('wozbe_admin_comment_edit', {'id': comment.id}) }}">
          <button type="button" class="btn btn-default btn-xs">
            <span class="glyphicon glyphicon-edit"></span>
          </button>
        </a>
        <a href="{{ url('wozbe_admin_comment_remove', {'id': comment.id}) }}">
          <button type="button" class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
