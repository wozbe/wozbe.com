{% extends 'WozbeAdminBundle::layout.html.twig' %}

{% block title %}{{ 'Comments'|trans }}{% endblock %}

{% block content %}
<div class="">
  <h1>
    Comment management
  </h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>{{ 'Id'|trans }}</th>
      <th>{{ 'Created At'|trans }}</th>
      <th>{{ 'Post'|trans }}</th>
      <th>{{ 'Author'|trans }}</th>
      <th>{{ 'Published'|trans }}</th>
      <th>{{ 'Actions'|trans }}</th>
    </tr>
  </thead>
  <tbody>
    {% for comment in comments %}
    <tr>
      <td>{{ comment.id }}</td>
      <td>{{ comment.createdAt|date('d/m/Y') }}</td>
      <td>{{ comment.post.title }}</td>
      <td>{{ comment.username }}</td>
      <td>{% if comment.published %}<span class="label label-info">Published</span>{% else %}<span class="label label-warning">Not Published</span>{% endif %}</td>
      <td>
        <a href="{{ url('wozbe_admin_comment_edit', {'id': comment.id}) }}">
          <button class="btn btn-mini" type="button"><i class="icon-edit"></i> {{ 'Edit'|trans }}</button>
        </a>
        <a href="{{ url('wozbe_admin_comment_remove', {'id': comment.id}) }}">
          <button class="btn btn-mini" type="button"><i class="icon-remove"></i> {{ 'Remove'|trans }}</button>
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
