{% extends 'WozbeAdminBundle::layout.html.twig' %}

{% block content %}

{% set configList = ['page.phone', 'page.email', 'blog.comment.enabled'] %}

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>{{ 'Name'|trans }}</th>
      <th>{{ 'Value'|trans }}</th>
    </tr>
  </thead>
  <tbody>
    {% for configName in configList %}
    <tr>
      <td>{{ configName }}</td>
      <td>{{ config(configName) }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
