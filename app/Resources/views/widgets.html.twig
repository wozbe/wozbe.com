{% macro button_contact_phone(doLink = true) %}
  {% if doLink %}
    <a href="tel://{{ phone }}"><button class="btn btn-large btn-warning" type="button"><i class="icon-phone-sign"></i> {{ phone }}</button></a>
  {% else %}
    <button class="btn btn-large btn-warning" type="button"><i class="icon-phone-sign"></i> {{ phone }}</button>
  {% endif %}
{% endmacro %}

{% macro button_contact_email(doLink = true) %}
  {% if doLink %}
    <a href="mailto:{{ email }}"><button class="btn btn-large btn-warning" type="button"><i class="icon-envelope"></i> {{ email }}</button></a>
  {% else %}
    <button class="btn btn-large btn-warning" type="button"><i class="icon-envelope"></i> {{ email }}</button>
  {% endif %}
  
{% endmacro %}